extends layout

append stylesheets
    link(rel='stylesheet', type='text/css', href='semantic/dist/components/card.min.css')
    link(rel='stylesheet', type='text/css', href='semantic/dist/components/input.min.css')
    link(rel='stylesheet', type='text/css', href='semantic/dist/components/button.min.css')
    link(rel='stylesheet', type='text/css', href='semantic/dist/components/dimmer.min.css')
    link(rel='stylesheet', type='text/css', href='semantic/dist/components/modal.min.css')
    link(rel='stylesheet', type='text/css', href='semantic/dist/components/transition.min.css')


block content
    div(ng-controller="newAdController")
        form.ui.form.fluid#newAdForm
            .fields.two
                .field.wide.twelve
                    label Title
                    input(name='name', placeholder='Title', ng-model='newAdForm.title')
                .field.wide.four
                    label Price
                    .ui.right.labeled.input
                        input(type='text', placeholder='Price')
                        .ui.basic.label
                            | USD
            .field
                label Description
                textarea(name='surname', ng-model='newAdForm.description')
            .five.fields
                .field
                    label Country
                    .ui.compact.selection.dropdown
                        input(type='hidden', name='country')
                        .default.text Country
                        i.dropdown.icon
                        .menu
                            .item(data-value='female') Iran
                            .item(data-value='male') Turkey
                .field
                    label City
                    .ui.compact.selection.dropdown
                        input(type='hidden', name='city')
                        .default.text City
                        i.dropdown.icon
                        .menu
                            .item(data-value='female') Iran
                            .item(data-value='male') Turkey
                .field
                    label District
                    .ui.compact.selection.dropdown
                        input(type='hidden', name='district')
                        .default.text District
                        i.dropdown.icon
                        .menu
                            .item(data-value='female') Iran
                            .item(data-value='male') Turkey
                .field
                    label Group 1
                    .ui.compact.selection.dropdown
                        input(type='hidden', name='')
                        .default.text Group 1
                        i.dropdown.icon
                        .menu
                            .item(data-value='female') Iran
                            .item(data-value='male') Turkey
                .field
                    label Group 2
                    .ui.compact.selection.dropdown
                        input(type='hidden', name='')
                        .default.text Group 2
                        i.dropdown.icon
                        .menu
                            .item(data-value='female') Iran
                            .item(data-value='male') Turkey

            .ui.tiny.images.stacked.segment
                img.ui.image.no-margin-bottom(src='https://semantic-ui.com/images/wireframe/image.png')
                img.ui.image.no-margin-bottom(src='https://semantic-ui.com/images/wireframe/image.png')
                img.ui.image.no-margin-bottom(src='https://semantic-ui.com/images/wireframe/image.png')
                img.ui.image.no-margin-bottom(src='https://semantic-ui.com/images/wireframe/image.png')


            .ui.error.message
            .backendErr.ui.red.message(ng-if="newAdErr")
                | {{ newAdErr }}


            button.ui.right.icon.button(form="newAdForm", ng-class="newAdBtnLoading ? 'loading' : '' ")
                | Save

append javascripts
    script(src="dist/js/app/controllers/newAdController.min.js")
    script(src="semantic/dist/components/dimmer.min.js")
    script(src="semantic/dist/components/modal.min.js")
    script(src="semantic/dist/components/transition.min.js")