doctype html
block head
  meta(charset='utf-8')
  title Admin
  meta(name='description', content='')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  meta(name='mobile-web-app-capable', content='yes')
  meta(name="robots", content="noindex")

  block stylesheets
      link(rel='stylesheet', href='/semantic/dist/semantic.min.css')
      link(rel='stylesheet', href='/dist/css/admin/main.css')

  body
    nav.ui.fixed.menu.inverted.navbar
      a.active.brand.item(href='') easyads
      a.item(href='/manage') Dashboard
      a.item(href='/manage/ads') Ads
      a.item(href='/manage/users') Users
      a.item(href='/manage/countries') Countries
      a.item(href='/manage/categories') Categories
      .right.menu
          a.item.no-before(href='/manage/logout') Logout
    main.ui.page.grid(ng-app="adminApp")
      .row
        .column
          .ui.message.main
            .ui.grid
              .ten.wide.column
                h3.ui.header= title
              .six.wide.column
                div.margin-right-10
                  h3.text-right
                    if total
                      | #
                      =total
            hr(style='color:#eee; margin:30px 0 40px 0')

            block content

    block javascripts
      script(src='/angular/angular.min.js')
      script(src="/angular-slugify/angular-slugify.js")
      // moment
      script(src="/moment/moment.js")
      script(src="/angular-moment/angular-moment.js")
      // moment
      script(src='/dist/js/admin/app/app.min.js')
      script(src='/jquery/dist/jquery.min.js')
      script(src='/semantic/dist/semantic.min.js')
      script(src="/jquery-ui/jquery-ui.min.js")
