                                input.openClose(type='checkbox', ng-model="newAdForm.workTimes.monday.open")
                                label #{i18n.__( "Open" )}

                        .ten.wide.column(ng-class="{ workTimeSettingsDisplay: !newAdForm.workTimes.monday.open }")
                            .ui.grid.text-left
                                .five.wide.column.center
                                    .ui.checkbox
                                        input.hour24(type='checkbox', ng-model="newAdForm.workTimes.monday.hour24")
                                        label #{i18n.__( "24 Hour" )}
                                .eleven.wide.column.timeDropdowns(ng-class="{ timeDropdownsVisible: newAdForm.workTimes.monday.hour24 }")
                                    .ui.grid.dropdowns
                                        .eight.wide.column
                                            select(ng-model='newAdForm.workTimes.monday.openTime', ng-options='item for item in clocks')
                                                option(value='', disabled, selected) #{i18n.__("Open Time")}
                                        .eight.wide.column
                                            select(
                                                ng-model='newAdForm.workTimes.monday.closeTime',
