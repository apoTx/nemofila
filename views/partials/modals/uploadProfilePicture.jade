.ui.modal.tiny#uploadProfilePictureModal
    i.close.icon
    .header
        | #{i18n.__("Upload Profile Picture")}
    .content
        div
            form.ui.form#uploadProfilePictureForm
                .fields.ui.grid
                    .field.sixteen.wide.column.no-padding-top.no-padding-bottom
                        //label E-mail
                        input(name='email', placeholder='E-mail', ng-model='subscribeFormData.email', autocapitalize="none")
                .ui.error.message
                .backendErr.ui.red.message(ng-if="subscribeErr")
                    | {{ subscribeErr }}


    .actions
        button.ui.right.icon.button.primary(
            form="uploadProfilePictureForm",
            ng-class="subscribeBtnLoading ? 'loading disabled' : '' "
        )
            | Submit
