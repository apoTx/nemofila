append stylesheets
    link(rel='stylesheet', type='text/css', href='/semantic/dist/components/comment.min.css')
    link(rel='stylesheet', type='text/css', href='/semantic/dist/components/input.min.css')

h2.ui.dividing.header Messages

.ui.stackable.two.column.grid(
        ng-controller="messagesController",
    )
    .five.wide.column
        .ui.segment.no-segment
            .ui.vertical.menu
                .item
                    .ui.transparent.icon.input
                        input(type='text', placeholder='Search')
                        i.search.icon

                a.item(
                        ng-repeat="conversation in conversations",
                        href="#!/messages/{{ conversation._id }}"
                    )
                    strong
                        | {{ conversation.ad.title | limitTo: 20 }} {{ conversation.ad.title.length > 20 ? '...' : ''}}
                    br
                    | {{ conversation.user.name }} {{ conversation.user.surname }}
        .ui.active.dimmer(ng-class="{disabled: !loadingConversations}")
            .ui.loader

    .eleven.wide.column
        .ui.comments
            .comment
                .content
                    a.author Matt
                    .metadata
                        span.date 5 days ago
                    .text
                        | Dude, this is awesome. Thanks so much
            .comment
                .content
                    a.author Elliot Fu
                    .metadata
                        span.date Yesterday at 12:30AM
                    .text
                        p This has been very useful for my research. Thanks as well!
            .comment
                .content
                    a.author Matt
                    .metadata
                        span.date Today at 5:42PM
                    .text
                        | How artistic!
            form.ui.reply.form
                .field
                    textarea(
                        ng-model="sendMessageFormData.message"
                    )
                .ui.right.floated.primary.submit.button(
                    form="sendMessageForm",
                    ng-class="sendMessageLoading ? 'loading disabled' : '' ",
                    ng-show="!messageSended",
                    ng-click="sendMessage()"
                )
                    |  Submit
