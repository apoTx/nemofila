link(rel='stylesheet', type='text/css', href='semantic/dist/components/table.min.css')

h2(ng-if="myFavourites.length > 0") My Favourites
h2.text-center(ng-if="myFavourites.length < 1") No Results

.ui.segment.no-segment(ng-if="myFavourites.length > 0")
    table.ui.striped.table
        tbody
            tr(ng-repeat="fav in myFavourites")
                td
                    a.black(
                        href="/detail/{{ fav.ad.slug }}/{{ fav.ad._id }}",
                        target="_blank"
                    )
                        |  {{ fav.ad.title }}
                td.right.aligned
                    a.ui.icon.button.tiny(
                        href="/detail/{{ fav.ad.slug }}/{{ fav.ad._id }}",
                        target="_blank"
                    )
                        i.eye.icon
    .ui.dimmer(ng-class="{active: loadingMyFavourites }")
        .ui.loader
