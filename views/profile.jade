extends layout

append stylesheets
    link(rel='stylesheet', type='text/css', href='dist/css/style.css')
    link(rel='stylesheet', type='text/css', href='dist/css/profile.css')
    link(rel='stylesheet', type='text/css', href='semantic/dist/components/card.min.css')
    link(rel='stylesheet', type='text/css', href='semantic/dist/components/button.min.css')
    link(rel='stylesheet', type='text/css', href='semantic/dist/components/loader.min.css')


block content
    div(ng-controller="profileController")
        .ui.pointing.menu
            a.item(
                href="#!myads",
                ng-class="{active: activetab=='/myads'}"
            )
                | My Ads
            a.item(
                href="#!messages",
                ng-class="{active: activetab=='/messages'}"
            )
                | Messages
            a.item(
                href="#!myfavourites",
                ng-class="{active: activetab=='/myfavourites'}"
            )
                | My Favourite Ads

        div.contentArea(ng-view='')


append javascripts
    script(src="dist/js/app/controllers/profileController.min.js")

    // MyAds
    script(src="dist/js/app/services/profile/myAdsFactory.min.js")
    script(src="dist/js/app/controllers/profile/myAdsController.min.js")

    // Messages
    script(src="dist/js/app/controllers/profile/messagesController.min.js")

    // MyFavourites
    script(src="dist/js/app/controllers/profile/myFavouritesController.min.js")

    script(src="semantic/dist/components/dimmer.min.js")
    script(src="semantic/dist/components/modal.min.js")
    script(src="semantic/dist/components/transition.min.js")
